{
  "name": "mini-vc-wallet-1",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "concurrently -n server,client -c blue,green \"pnpm --filter @server/app run dev\" \"pnpm --filter @client/app run dev\"",
    "dev:server": "pnpm --filter @server/app run dev",
    "dev:client": "pnpm --filter @client/app run dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "format": "prettier --write .",
    "clean": "git clean -xdf -e node_modules"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.4.0",
    "eslint": "8.57.0",
    "concurrently": "^8.2.2",
    "@typescript-eslint/parser": "^8.8.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "@types/node": "^20.11.30"
  }
}
